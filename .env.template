# Environment
ENV=qa

# URLs for different environments
QA_BASE_URL=https://qa.example.com
DEV_BASE_URL=https://dev.example.com
STAGING_BASE_URL=https://staging.example.com

# Timeouts
DEFAULT_TIMEOUT=10
EXTENDED_TIMEOUT=30

# Browser Settings
BROWSER=chrome
HEADLESS=False

# Test User Credentials
QA_USER_EMAIL=qa_user@example.com
QA_USER_PASSWORD=qa_password
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=admin_password
STANDARD_USER_EMAIL=user@example.com
STANDARD_USER_PASSWORD=user_password

# API Credentials
API_KEY=your_api_key
API_SECRET=your_api_secret

# Database Configuration
DB_USER=db_user
DB_PASSWORD=db_password
DB_HOST=localhost
DB_NAME=test_db

# Test Execution Settings
RETRY_COUNT=2
PARALLEL_WORKERS=2
SCREENSHOT_ON_FAILURE=True
VIDEO_RECORDING=False

# Report Settings
REPORT_TITLE=Test Automation Report
REPORT_TEMPLATE=report_template.html

# Logging
LOG_LEVEL=INFO

# Element Wait Conditions
POLL_FREQUENCY=0.5
ELEMENT_PRESENCE_TIMEOUT=10
ELEMENT_VISIBILITY_TIMEOUT=10
ELEMENT_CLICKABLE_TIMEOUT=10
